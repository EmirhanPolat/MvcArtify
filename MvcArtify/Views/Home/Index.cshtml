@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Set your desired layout
}

<div class="text-center">
    <h1 class="display-4">Welcome to Artify</h1>
    <p>Explore and discover amazing artworks.</p>

    <!-- Search Bar -->
    <form asp-controller="Artwork" asp-action="Index" method="get">
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="searchQuery" placeholder="Search for artworks...">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </div>
        </div>
    </form>

    <!-- Navigation Links -->
    <div class="row mt-4">
        <div class="col">
            <a class="btn btn-primary" href="@Url.Action("Index", "Artwork")">View Artworks</a>
        </div>
        <div class="col">
            <a class="btn btn-primary" href="@Url.Action("Index", "Exhibition")">View Exhibitions</a>
        </div>
        <div class="col">
            <a class="btn btn-primary" href="@Url.Action("Profile", "UserProfile")">Your Profile</a>
        </div>
        <div class="col">
            <a class="btn btn-primary" href="@Url.Action("BoughtArtworks", "UserProfile")">Purchased Artworks</a>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Optional JavaScript if needed -->
}
